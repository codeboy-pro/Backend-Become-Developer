<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
<link rel="stylesheet" href="/css/style.css">
  <body>
   
<div class="w-full h-screen">
  <div class="flex flex-col items-center justify-center h-full p-8">
    <!-- Game Title -->
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-white mb-2 drop-shadow-lg">Chess Master</h1>
      <p class="text-gray-300 text-lg">Play the Royal Game</p>
    </div>
    
    <!-- Chess Game Container -->
    <div class="relative">
      <!-- Player Info Top -->
      <div class="mb-4 text-center">
        <div class="bg-gray-800 bg-opacity-80 backdrop-blur-sm rounded-lg px-6 py-3 inline-block">
          <span class="text-white font-semibold">Black Player</span>
          <span class="ml-2 text-gray-300">●</span>
        </div>
      </div>
      
      <!-- Chessboard -->
      <div class="chessboard"></div>
      
      <!-- Player Info Bottom -->
      <div class="mt-4 text-center">
        <div class="bg-gray-800 bg-opacity-80 backdrop-blur-sm rounded-lg px-6 py-3 inline-block">
          <span class="text-white font-semibold">White Player</span>
          <span class="ml-2 text-gray-300">○</span>
        </div>
      </div>
    </div>
    
    
  
  </div>
</div>
    <script
      src="https://cdn.socket.io/4.8.1/socket.io.min.js"
      integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"
      integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/js/chess_game.js"></script>
  </body>
</html>
